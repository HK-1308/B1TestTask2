@using B1TestTask2.Data.ViewModels
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexViewModel
<!DOCTYPE html>
    <html>
    <head>
           <meta name="viewport" content="width=device-width" />
            <title>@ViewBag.Title</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
          rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>

    <body>
            <header>
                <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" >TestTask2</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container " style="margin-top: 5rem">

                <div class="mb-3 row">
                <form asp-controller="Main" asp-action="LoadFile" method="post" enctype="multipart/form-data">
                    <label asp-for="File" class="custom-control-label"></label>
                    <input class="btn btn-secondary" asp-for="File" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
                    <input class="btn btn-secondary" type="submit" value="Load file" />
                </form>
                </div>

                @if (Model.Files.Count != 0)
                {
                    <div class="container my-5">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>

                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                            foreach (var file in Model.Files)
                            {
                                                <tr>
                                                <th>
                                                    @file.Name
                                                </th>
                                                <th>
                                                    <a class="nav-link active" asp-controller="Main" asp-action="ShowFile" asp-route-id="@file.Id"> Show </a>
                                                </th>
                                                <th>
                                                    <a class="nav-link active" asp-controller="Main" asp-action="DownloadFile" asp-route-id="@file.Id"> Download </a>
                                                </th>
                                                </tr>
                            }
                                }
                            </tbody>
                        </table>   
                    </div>
                }
             </div>         
    </body>
    </html>
    <script>

    </script>