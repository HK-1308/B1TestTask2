@using B1TestTask2.Data.ViewModels
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model ShowFileViewModel

<!DOCTYPE html>
    <html>
    <head>
           <meta name="viewport" content="width=device-width" />
            <title>@ViewBag.Title</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
          rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </head>

    <body>
            <header>
                <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-controller="Main" asp-action="Index" >TestTask2</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container " style="margin-top: 5rem">

                            <table class="table">
                            <thead>
                                 <tr>
                                    <th rowspan = "2" > Б/сч.</th>
                                     
                                    <th colspan="2">Входящее Сальдо</th>

                                    <th colspan="2">Обороты</th>

                                    <th colspan="2">Исходящее Сальдо</th>
                                </tr>
                                <tr>                               
                                    <th>Актив</th>

                                    <th>Пассив</th>

                                    <th>Дебет</th>

                                    <th>Кредит</th>

                                    <th>Актив</th>

                                    <th>Пассив</th>
                                </tr>

                            </thead>
                            <tbody>
                @{
                    int currentClass = 0;
                    foreach (var record in Model.Records)
                    {
                       @if(Convert.ToInt32(record.Id[0].ToString()) > currentClass)
                        {
                            currentClass++;
                            
                                                <tr>
                                                <th  colspan="7">
                                                    КЛАСС  @currentClass @record.ClassName
                                                </th>
                                                </tr>
                        }

                        <tr>
                            <th>
                                                    @record.Id
                                                </th>
                                                <th>
                                                    @record.IncomingActive
                                                </th>
                                                <th>
                                                    @record.IncomingPassive
                                                </th>
                                                <th>
                                                    @record.Credit
                                                </th>
                                                <th>
                                                    @record.Debit
                                                </th>
                                                <th>
                                                    @record.OutgoingActive
                                                </th>
                                                <th>
                                                    @record.OutgoingPassive
                                                </th>
                                                </tr>
                            }
                                }
                            </tbody>
                        </table>   
             </div>         
    </body>
    </html>
    <script>

    </script>